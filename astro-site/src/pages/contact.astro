---
import BaseLayout from '../layouts/BaseLayout.astro';
import MultistepSurvey from '../components/MultistepSurvey.astro';

const schema = {
	"@context": "https://schema.org",
	"@type": "GeneralContractor",
	"name": "Bowka Construction",
	"url": "https://bowkaconstruction.com",
	"telephone": "(801) 555-0123",
	"email": "info@bowkaconstruction.com",
	"address": {
		"@type": "PostalAddress",
		"addressRegion": "UT",
		"addressCountry": "US"
	},
	"areaServed": [
		{
			"@type": "City",
			"name": "Provo",
			"containedInPlace": {
				"@type": "State",
				"name": "Utah"
			}
		}
	],
	"contactPoint": {
		"@type": "ContactPoint",
		"telephone": "(801) 555-0123",
		"contactType": "Customer Service",
		"availableLanguage": "English"
	}
};
---

<BaseLayout
	title="Contact Us | Bowka Construction — Utah General Contractor"
	description="Get a free estimate from Bowka Construction. Licensed B100 general contractor serving Utah County, Salt Lake County, and Davis County."
>
	<script type="application/ld+json" set:html={JSON.stringify(schema)} />

	<!-- Survey Section -->
	<section class="bg-black text-white pt-40 pb-24 md:pt-48 md:pb-32 px-6 md:px-12">
		<div class="container mx-auto max-w-5xl">
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 items-start">
				<!-- Left Column -->
				<div>
					<span class="block text-xs font-semibold tracking-widest uppercase text-neutral-500 mb-4">Get In Touch</span>
					<h1 class="text-4xl md:text-5xl lg:text-6xl font-semibold tracking-tight mb-6">
						Let's Talk About<br>Your Project.
					</h1>
					<p class="text-lg text-neutral-400 font-light leading-relaxed mb-8">
						Tell us what you're building. It takes 30 seconds and we'll get back to you within 24 hours with a free, no-obligation estimate.
					</p>
					<div class="flex flex-col gap-4 text-sm text-neutral-500">
						<div class="flex items-center gap-3">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-neutral-400 flex-shrink-0"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
							<span>Free estimate — no obligation</span>
						</div>
						<div class="flex items-center gap-3">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-neutral-400 flex-shrink-0"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
							<span>Response within 24 hours</span>
						</div>
						<div class="flex items-center gap-3">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-neutral-400 flex-shrink-0"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
							<span>B100 licensed & fully insured</span>
						</div>
					</div>
				</div>
				<!-- Right Column: Survey -->
				<div>
					<MultistepSurvey />
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Details Section -->
	<section class="bg-neutral-950 text-white py-20 px-6 md:px-12 border-t border-neutral-800">
		<div class="container mx-auto max-w-5xl">
			<div class="grid grid-cols-1 md:grid-cols-3 gap-12">
				<!-- Phone -->
				<div>
					<h2 class="text-sm font-semibold tracking-widest uppercase text-neutral-500 mb-4">Call Us</h2>
					<a href="tel:8015550123" class="text-xl text-white hover:text-neutral-300 transition-colors font-light">(801) 555-0123</a>
					<p class="text-sm text-neutral-500 mt-2">Mon – Fri: 7am – 6pm</p>
					<p class="text-sm text-neutral-500">Saturday: 8am – 2pm</p>
				</div>
				<!-- Email -->
				<div>
					<h2 class="text-sm font-semibold tracking-widest uppercase text-neutral-500 mb-4">Email</h2>
					<a href="mailto:info@bowkaconstruction.com" class="text-xl text-white hover:text-neutral-300 transition-colors font-light break-all">info@bowkaconstruction.com</a>
					<p class="text-sm text-neutral-500 mt-2">We respond within 24 hours</p>
				</div>
				<!-- Service Area -->
				<div>
					<h2 class="text-sm font-semibold tracking-widest uppercase text-neutral-500 mb-4">Service Area</h2>
					<p class="text-neutral-300 font-light">Utah County, Salt Lake County & Davis County</p>
					<a href="/areas-we-serve" class="text-sm text-neutral-500 hover:text-white transition-colors mt-2 inline-block">View all areas →</a>
				</div>
			</div>
		</div>
	</section>
</BaseLayout>
