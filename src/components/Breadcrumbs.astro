---
interface Props {
	items: Array<{ label: string; href: string }>;
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb">
	<ol class="flex items-center gap-3 text-[10px] uppercase tracking-[0.2em] text-neutral-500">
		<li>
			<a href="/" class="hover:text-white transition-colors">Home</a>
		</li>
		{items.map((item, index) => (
			<>
				<li aria-hidden="true" class="text-neutral-800">/</li>
				<li>
					{index === items.length - 1 ? (
						<span class="text-neutral-300 font-semibold" aria-current="page">{item.label}</span>
					) : (
						<a href={item.href} class="hover:text-white transition-colors">{item.label}</a>
					)}
				</li>
			</>
		))}
	</ol>
</nav>
