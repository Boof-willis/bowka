---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Licensed B100 General Contractor serving Utah County, Salt Lake County, and Davis County. Basement finishing, remodeling, and new construction." } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />

		<!-- Fonts preconnect (fonts also loaded via global.css) -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

		<!-- Iconify for icons -->
		<script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
	</head>
	<body class="font-body text-slate bg-off-white antialiased selection:bg-amber selection:text-white">
		<slot />
	</body>
</html>
