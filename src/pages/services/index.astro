---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const services = [
	{
		icon: "sofa",
		title: "Basement Finishing",
		description: "Transform your unfinished basement into functional living space. Bedrooms, family rooms, home theaters, and mother-in-law apartments.",
		href: "/services/basement-finishing"
	},
	{
		icon: "utensils",
		title: "Kitchen Remodeling",
		description: "Modernize your kitchen with custom cabinetry, countertops, islands, and open-concept layouts. From minor updates to complete renovations.",
		href: "/services/kitchen-remodeling"
	},
	{
		icon: "bath",
		title: "Bathroom Remodeling",
		description: "Create spa-like master baths and functional guest bathrooms. Tile, vanities, walk-in showers, and accessibility features.",
		href: "/services/bathroom-remodeling"
	},
	{
		icon: "home",
		title: "Whole-Home Renovation",
		description: "Complete home transformations and space re-imagining. Open-concept conversions, room repurposing, and modern upgrades.",
		href: "/services/remodeling"
	},
	{
		icon: "layers",
		title: "Concrete Work",
		description: "Driveways, patios, walkways, and foundations. Standard and stamped concrete built for Utah's freeze-thaw cycles.",
		href: "/services/concrete"
	},
	{
		icon: "plus-square",
		title: "Home Additions",
		description: "Expand your home with room additions, mother-in-law suites, garages, and second stories. Seamless integration with your existing structure.",
		href: "/services/additions"
	},
	{
		icon: "hammer",
		title: "New Construction",
		description: "Custom homes from the ground up. Full project management from design to keys. Build the home you've always wanted.",
		href: "/services/new-construction"
	}
];
---

<BaseLayout
	title="Our Services | Bowka Construction â€” Utah General Contractor"
	description="Comprehensive construction services in Utah. Basement finishing, kitchen and bathroom remodeling, concrete work, additions, and new construction. B100 licensed and fully insured."
>
	<Header />

	<!-- Hero -->
	<section class="relative pt-40 pb-24 md:pt-48 md:pb-32 bg-black text-white overflow-hidden">
		<!-- Background Image Overlay -->
		<div class="absolute inset-0 z-0">
			<img 
				src="https://hoirqrkdgbmvpwutwuwj.supabase.co/storage/v1/object/public/assets/assets/917d6f93-fb36-439a-8c48-884b67b35381_1600w.jpg" 
				alt="Bowka Construction Services" 
				class="w-full h-full object-cover opacity-30"
			/>
			<div class="absolute inset-0 bg-gradient-to-b from-black/80 via-black/50 to-black"></div>
		</div>

		<div class="container mx-auto px-6 md:px-12 relative z-10">
			<div class="max-w-4xl">
				<div class="reveal">
					<span class="block text-xs font-semibold tracking-widest uppercase text-neutral-500 mb-4">Our Expertise</span>
					<h1 class="text-4xl md:text-6xl font-semibold tracking-tight mb-8 leading-[1.1]">
						Comprehensive Construction<br class="hidden md:block" /> Solutions in Utah.
					</h1>
				</div>
				<p class="text-lg md:text-xl text-neutral-400 font-light leading-relaxed mb-10 max-w-2xl reveal delay-100">
					From custom basement finishing to new residential builds, we bring meticulous craftsmanship and professional management to every project we touch.
				</p>
			</div>
		</div>
	</section>

	<!-- Breadcrumbs -->
	<div class="bg-black border-y border-neutral-900">
		<div class="container mx-auto px-6 md:px-12 py-6">
			<Breadcrumbs items={[{ label: "Services", href: "/services" }]} />
		</div>
	</div>

	<!-- Services Grid -->
	<section class="py-24 md:py-32 bg-black text-white">
		<div class="container mx-auto px-6 md:px-12">
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				{services.map((service, index) => (
					<a 
						href={service.href} 
						class={`group bg-neutral-900/50 border border-neutral-800 p-10 md:p-12 hover:bg-neutral-900 transition-all duration-500 flex flex-col items-start reveal delay-${(index % 3) * 100}`}
					>
						<div class="w-12 h-12 rounded-full border border-neutral-800 flex items-center justify-center mb-8 group-hover:border-neutral-700 transition-colors">
							{service.icon === 'sofa' && <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-neutral-500 group-hover:text-white transition-colors"><path d="M20 9V6a2 2 0 0 0-2-2H6a2 2 0 0 0-2 2v3"></path><path d="M2 16a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-5a2 2 0 0 0-4 0v1.5a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5V11a2 2 0 0 0-4 0z"></path><path d="M4 18v2"></path><path d="M20 18v2"></path><path d="M12 4v9"></path></svg>}
							{service.icon === 'utensils' && <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-neutral-500 group-hover:text-white transition-colors"><path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/></svg>}
							{service.icon === 'bath' && <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-neutral-500 group-hover:text-white transition-colors"><path d="M9 6 6.5 3.5a1.5 1.5 0 0 0-1-.5C4.683 3 4 3.683 4 4.5V17a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-5"/><line x1="10" x2="8" y1="5" y2="7"/><line x1="2" x2="22" y1="12" y2="12"/><line x1="7" x2="7" y1="19" y2="21"/><line x1="17" x2="17" y1="19" y2="21"/></svg>}
							{service.icon === 'home' && <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-neutral-500 group-hover:text-white transition-colors"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>}
							{service.icon === 'layers' && <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-neutral-500 group-hover:text-white transition-colors"><path d="m12.83 2.18a2 2 0 0 0-1.66 0L2.6 6.08a1 1 0 0 0 0 1.83l8.58 3.91a2 2 0 0 0 1.66 0l8.58-3.9a1 1 0 0 0 0-1.83Z"></path><path d="m22 17.65-9.17 4.16a2 2 0 0 1-1.66 0L2 17.65"></path><path d="m22 12.65-9.17 4.16a2 2 0 0 1-1.66 0L2 12.65"></path></svg>}
							{service.icon === 'plus-square' && <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-neutral-500 group-hover:text-white transition-colors"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M8 12h8"/><path d="M12 8v8"/></svg>}
							{service.icon === 'hammer' && <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-neutral-500 group-hover:text-white transition-colors"><path d="m15 12-9.373 9.373a1 1 0 0 1-3.001-3L12 9"></path><path d="m18 15 4-4"></path><path d="m21.5 11.5-1.914-1.914A2 2 0 0 1 19 8.172v-.344a2 2 0 0 0-.586-1.414l-1.657-1.657A6 6 0 0 0 12.516 3H9l1.243 1.243A6 6 0 0 1 12 8.485V10l2 2h1.172a2 2 0 0 1 1.414.586L18.5 14.5"></path></svg>}
						</div>
						<h3 class="text-xl font-semibold tracking-tight mb-4">{service.title}</h3>
						<p class="text-neutral-400 font-light leading-relaxed mb-8">{service.description}</p>
						<span class="text-xs font-semibold uppercase tracking-widest text-neutral-500 group-hover:text-white transition-colors flex items-center gap-2">
							View Service
							<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transform group-hover:translate-x-1 transition-transform"><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg>
						</span>
					</a>
				))}
				
				<!-- Final CTA Card -->
				<a 
					href="/#estimate" 
					class="group bg-white p-10 md:p-12 hover:bg-neutral-100 transition-all duration-500 flex flex-col items-start reveal delay-300"
				>
					<div class="w-12 h-12 rounded-full border border-neutral-200 flex items-center justify-center mb-8 group-hover:border-neutral-900 transition-colors">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-neutral-500 group-hover:text-black transition-colors"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
					</div>
					<h3 class="text-xl font-semibold tracking-tight mb-4 text-black">Start Your Project</h3>
					<p class="text-neutral-600 font-light leading-relaxed mb-8">Ready to build? Let's discuss your project and get you a free estimate.</p>
					<span class="text-xs font-semibold uppercase tracking-widest text-neutral-400 group-hover:text-black transition-colors flex items-center gap-2">
						Get Estimate
						<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transform group-hover:translate-x-1 transition-transform"><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg>
					</span>
				</a>
			</div>
		</div>
	</section>

	<!-- Minimal Footer CTA -->
	<section class="py-24 bg-neutral-950 text-white border-t border-neutral-900 text-center px-6">
		<div class="container mx-auto max-w-3xl reveal">
			<h2 class="text-3xl md:text-4xl font-semibold tracking-tight mb-6">Built to Last.</h2>
			<p class="text-neutral-400 font-light text-lg mb-10">We serve Utah County, Salt Lake County, and Davis County with licensed B100 general contracting services.</p>
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<a href="/#estimate" class="px-8 py-4 bg-white text-black text-xs font-semibold uppercase tracking-widest hover:bg-neutral-200 transition-colors rounded-full">
					Get An Estimate
				</a>
				<a href="tel:8015550123" class="px-8 py-4 border border-neutral-800 text-white text-xs font-semibold uppercase tracking-widest hover:bg-neutral-900 transition-colors rounded-full">
					Call (801) 555-0123
				</a>
			</div>
		</div>
	</section>

	<Footer />
</BaseLayout>
